		<option value="item_segment">Item Segment</option>
		<option value="inv_post_grp">Inv Post Grp</option>
		<option value="all">All</option>
	</select><br>
	<label>Item Code: </label><input placeholder="item code" type='text' name='item_code'/><br>
	<label><strong>Inclusion</strong></label>
		<select name='inclusion'>
			<option value="yes">YES</option>
			<option value="no">NO</option>
		</select><br>

</form>


